extends layouts/base.pug

block content 
    div.main__header
        span 환영합니다😄      
        span.main__header-sec 이메일과 ID는 중복 될 수 없습니다. 비밀번호는 최소 8자리를 입력해주세요.

    if user
        form.join-form(action="" method="POST")        
            input(type="email" placeholder="E-mail" name="email" required value=`${user.email}`)                  
            input(type="password" placeholder="Password" name="password" required) 
            input(type="password" placeholder="Cofirm Password" name="password2" required ) 
            input(type="text" placeholder="ID / Nick name" name="userid" required value=`${user.userid}`)
            input(type="submit" value="Join")
    
    else
        form.join-form(action="" method="POST")                    
            input.join-form__email(type="email" placeholder="E-mail" name="email" required)                            
            input(type="password" placeholder="Password" name="password" required) 
            input(type="password" placeholder="Cofirm Password" name="password2" required) 
            input(type="text" placeholder="ID / Nick name" name="userid" required)                        
            input(type="submit" value="Join")
        

    if errorMessage
        script.         
            alert(`#{errorMessage}`)