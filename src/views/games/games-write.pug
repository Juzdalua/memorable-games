extends ../layouts/base.pug

block content    
    form.steam-form(action="" method="POST" enctype="multipart/form-data")
        div.steam-form__header
            div.steam-form__header-age
                label(for="age") 연령제한
                    select(type="select" id="age" name="age")
                        option(value="0") 전체이용가
                        option(value="1") 12세이용가
                        option(value="2") 15세이용가
                        option(value="3") 청소년이용불가
                        option(value="4") 시험용
                        option(value="5") 등급면제
                label(for="genre") 게임 장르
                    select(type="select" id="genre" name="genre")
                        option(value="0") 액션
                        option(value="1") RPG
                        option(value="2") 퍼즐
                        option(value="3") 어드벤쳐
                        option(value="4") 시뮬레이션
                        option(value="5") 음악
                        option(value="6") 스포츠
                        option(value="7") 아케이드
            div.steam-form__header-title
                span 제목: 
                    input(type="text" placeholder="제목을 입력하세요" required name="title")
        div.steam-form__main    
            label(for="video") 비디오를 선택하세요
                input(type="file" accept="video/*"  name="video" id="video")    
            label(for="image") 이미지를 선택하세요
                input(type="file" accept="image/*"  name="image" id="image")      
            textarea(name="description", cols="100", rows="20" required) 
        input(type="submit" value="작성완료")