doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Memorable Games #{pageTitle}
        style 
            include ../styles/style.css
    body 
        nav.nav-topbar 
            ul.nav-topbar__main 
                li
                    a.fas.fa-home(href="/")
                if !loggedIn     
                    li
                        a(href="/login") 로그인
                    li
                        a(href="/join") 회원가입
                else
                    li 
                        a(href=`/user/${loggedInUser.userid}`) #{loggedInUser.userid} 
                    li
                        a(href="/logout") 로그아웃

        nav.nav-sidebar
            ul.nav-sidebar__main 
                li 
                    a(href="/notice") 
                        span.nav-sidebar__main-notice__title  공지사항
                        span.nav-sidebar__main-notice__icon 🔖
                li 
                    a(href="/games") 
                        span.nav-sidebar__main-game__title 게임
                        span.nav-sidebar__main-game__icon 🎲
                li 
                    a(href="/community") 
                        span.nav-sidebar__main-community__title 커뮤니티
                        span.nav-sidebar__main-community__icon 🧑‍🤝‍🧑
        
        main
            block content     

    
    script(src="https://kit.fontawesome.com/20f15630ea.js" crossorigin="anonymous") 
    block script

    include footer.pug